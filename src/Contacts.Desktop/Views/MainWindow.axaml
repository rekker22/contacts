<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Contacts.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="650" Height="450"
        x:Class="Contacts.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Background="{StaticResource Primary}"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False"
        Icon="/Assets/avalonia-logo.ico"
        Title="Contacts">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="4*,Auto,6*"
          Margin="0 30 0 0">
        <ContentControl Grid.Column="0" 
                        Content="{Binding ContactsListViewModel}" />
        <Border Grid.Column="1"
                Width="2"
                Background="{StaticResource SecondaryDark}"
                Height="400"
                CornerRadius="14"
                BorderThickness="0" />
        <ContentControl Grid.Column="2"
                        Content="{Binding ContactDetailsViewModel}"/>
    </Grid>

</Window>